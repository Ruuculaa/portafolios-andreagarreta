<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="carta">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="benvinguda">
                    <xs:complexType mixed="true">
                        <xs:sequence>
                            <xs:element name="tracte" type="xs:string"/>
                            <xs:element name="nom" type="xs:string"/>
                        </xs:sequence>
                        
                    </xs:complexType>
                </xs:element>
                <xs:element name="cos" type="xs:string"/>
                <xs:element name="signatura" type="xs:string"/>
                <xs:element name="data">
                    <xs:complexType mixed="true">
                        <xs:sequence>
                            <xs:element name="mes" type="xs:string"/>
                            <xs:element name="any" type="xs:string"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>
